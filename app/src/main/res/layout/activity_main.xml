<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.solus.exoplayeroverdrawbugdemo.MainActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView android:id="@+id/playerView1"
                                                          android:layout_width="match_parent"
                                                          android:layout_height="250dp"
                                                          android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="Swap Player"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView android:id="@+id/playerView2"
                                                          android:layout_width="match_parent"
                                                          android:layout_height="250dp"
                                                          android:visibility="visible"/>
</android.support.v7.widget.LinearLayoutCompat>
